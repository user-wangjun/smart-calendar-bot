# MCP服务环境配置文件

# 服务器配置
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3001
MCP_SERVER_ENV=production

# 数据库配置
MCP_DB_HOST=localhost
MCP_DB_PORT=27017
MCP_DB_NAME=mcp_management_db
MCP_DB_USERNAME=mcp_admin
MCP_DB_PASSWORD=your_secure_password_here

# 数据库连接池配置
MCP_DB_POOL_SIZE=10
MCP_DB_TIMEOUT=30000
MCP_DB_RECONNECT_INTERVAL=5000

# JWT认证配置
MCP_JWT_SECRET=your_jwt_secret_key_change_this_in_production
MCP_JWT_EXPIRES_IN=7d
MCP_JWT_REFRESH_EXPIRES_IN=30d

# 管理员账号配置
MCP_ADMIN_USERNAME=admin
MCP_ADMIN_EMAIL=admin@mcp-platform.com
MCP_ADMIN_PASSWORD=Admin@2024

# 日志配置
MCP_LOG_LEVEL=info
MCP_LOG_FILE_PATH=./logs/mcp-service.log
MCP_LOG_MAX_SIZE=20m
MCP_LOG_MAX_FILES=5

# API限流配置
MCP_RATE_LIMIT_WINDOW=15
MCP_RATE_LIMIT_MAX=100
MCP_RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# 服务监控配置
MCP_HEALTH_CHECK_INTERVAL=30000
MCP_HEALTH_CHECK_TIMEOUT=10000
MCP_MONITOR_ALERT_EMAIL=alerts@mcp-platform.com

# 邮件服务配置（用于告警通知）
MCP_EMAIL_SERVICE=smtp
MCP_EMAIL_HOST=smtp.gmail.com
MCP_EMAIL_PORT=587
MCP_EMAIL_SECURE=false
MCP_EMAIL_USER=your-email@gmail.com
MCP_EMAIL_PASSWORD=your-email-password
MCP_EMAIL_FROM=MCP Platform <noreply@mcp-platform.com>

# 备份配置
MCP_BACKUP_ENABLED=true
MCP_BACKUP_INTERVAL=86400000
MCP_BACKUP_PATH=./backups
MCP_BACKUP_RETENTION_DAYS=30

# 缓存配置
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=3600
MCP_CACHE_MAX_SIZE=1000

# 安全配置
MCP_CORS_ENABLED=true
MCP_CORS_ORIGIN=*
MCP_HELMET_ENABLED=true
MCP_RATE_LIMIT_ENABLED=true

# PM2进程管理配置
MCP_PM2_INSTANCES=2
MCP_PM2_MAX_MEMORY_RESTART=1G
MCP_PM2_MIN_UPTIME=10s
