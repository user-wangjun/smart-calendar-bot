# 智能日历后端服务器环境配置

# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/smart-calendar
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart-calendar

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 前端配置
FRONTEND_URL=http://127.0.0.1:5173

# AI服务API密钥（可选，用于服务端代理）
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
CHERRY_API_KEY=your-cherry-api-key
QINIU_API_KEY=your-qiniu-api-key
OLLAMA_BASE_URL=http://localhost:11434

# 文件上传配置
UPLOAD_MAX_SIZE=5242880  # 5MB
UPLOAD_DIR=uploads/

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# 邮件服务配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 缓存配置
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# 分析配置
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# 备份配置
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# 通知配置
ENABLE_NOTIFICATIONS=true
PUSH_NOTIFICATION_TTL=86400
